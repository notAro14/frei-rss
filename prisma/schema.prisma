generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model FeedItem {
  created_at DateTime? @default(now())
  url        String    @unique
  fk_feed_id String
  pub_date   DateTime
  title      String
  id         String    @id @unique @default(cuid())
  is_read    Boolean?  @default(false)
  fk_user_id String
  user       User      @relation(fields: [fk_user_id], references: [id])
  feed       Feed      @relation(fields: [fk_feed_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model Feed {
  created_at DateTime?  @default(now())
  url        String     @unique
  name       String?
  id         String     @id @unique @default(cuid())
  fk_user_id String
  user       User       @relation(fields: [fk_user_id], references: [id], onDelete: Cascade)
  feed_item  FeedItem[]
}

model User {
  id        String     @id @unique
  feed_item FeedItem[]
  feed      Feed[]
}
